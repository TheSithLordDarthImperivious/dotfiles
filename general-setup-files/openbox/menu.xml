<?xml version="1.0" ?>

<openbox_menu>
<menu id="root-menu" label="Main Menu">
  <separator label="Main Menu" />
  <item label="All Programs">
      <action name="Execute">
          <command>rofi -show drun</command>
      </action>
  </item>
  <item label="All Windows">
    <action name="Execute">
        <command>rofi -show window -kb-accept-entry '!Alt-Tab,!Alt-ISO_Left_Tab,Return' -kb-row-down 'Alt-Tab,Alt-Down,Down' -kb-row-up 'Alt-ISO_Left_Tab,Alt-Up,Up' -kb-cancel 'Alt-Escape,Escape'</command>
    </action>
  </item>
  <separator />
  <item label="File Browser">
      <action name="Execute">
          <command>rofi -show filebrowser</command>
      </action>
  </item>
  <separator />
  <item label="Terminal">
      <action name="Execute">
          <command>qterminal</command>
      </action>
  </item>
  <item label="Web Browser">
      <action name="Execute">
          <command>librewolf</command>
      </action>
  </item>
  <item label="Full File Manager">
      <action name="Execute">
          <command>pcmanfm-qt</command>
      </action>
  </item>
  <item label="Password Manager">
      <action name="Execute">
          <command>keepassxc</command>
      </action>
  </item>
  <separator />
  <item label="Text Editor">
      <action name="Execute">
          <command>qterminal -e nano</command>
      </action>
  </item>
  <item label="Process Monitor">
      <action name="Execute">
          <command>qterminal -e htop</command>
      </action>
  </item>
  <separator />
  <item label="Add Virtual Output for iPad">
    <action name="VirtualOutputAdd" output_name="SecondaryDisplay"/>
    <action name="Execute" command='sh -c "wlr-randr --output SecondaryDisplay --scale 2 --custom-mode 2048x1536; wayvnc -r -S /tmp/wayvncctl-ipad --output SecondaryDisplay 0.0.0.0 5900"'/>
  </item>
  <item label="Add 3:4 Virtual Output">
    <action name="VirtualOutputAdd" output_name="Virtual34Display"/>
    <action name="Execute" command='sh -c "wlr-randr --output Virtual34Display --scale 1 --custom-mode 1024x768; wayvnc -r -S /tmp/wayvncctl-34 --output Virtual34Display 0.0.0.0 5934"'/>
  </item>
  <item label="Add 16:9 Virtual Output">
    <action name="VirtualOutputAdd" output_name="Virtual169Display"/>
    <action name="Execute" command='sh -c "wlr-randr --output Virtual169Display --scale 1 --custom-mode 1920x1080; wayvnc -r -S /tmp/wayvncctl-169 --output Virtual169Display 0.0.0.0 5916"'/>
  </item>
  <item label="Remove Latest Virtual Output">
    <action name="VirtualOutputRemove"/>
    <action name="Execute" command='sh -c "kill -3 $(pgrep -n wayvnc)"'/>
  </item>
  <separator />
  <item label="Lock Screen">
      <action name="Execute">
        <command>swaylock -c 0F111A --font 'Ubuntu Nerd Font' --font-size 12 --text-color FFFFFF --text-caps-lock-color FFFFFF --ring-color 107C10 --ring-clear-color 018F91 --ring-ver-color 0886FF --ring-wrong-color FF0000 --separator-color BFC3C4 --text-color FFFFFF --text-clear-color FFFFFF --text-ver-color FFFFFF --text-wrong-color FFFFFF --line-color BFC3C4 --line-clear-color FFFFFF --line-caps-lock-color FFFFFF --line-ver-color FFFFFF --line-wrong-color FFFFFF --inside-color 005000 --inside-clear-color 045D5D --inside-ver-color 005EB8 --inside-wrong-color 900000</command>
      </action>
  </item>
  <item label="Power Options">
    <action name="Execute">
        <command>rofi -show power-menu -modi power-menu:'~/.config/rofi/rofi-power-menu' -no-show-icons</command>
    </action>
  </item>
  <item label="Reconfigure"><action name="Reconfigure" /></item>
  <item label="Exit"><action name="Exit" /></item>
</menu>
</openbox_menu>
